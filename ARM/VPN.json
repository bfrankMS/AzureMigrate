{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "localNetworkGateways_lgw_cmonprem_001_name": {
            "defaultValue": "lgw-vpnonprem",
            "type": "String"
        },
        "publicIPAddresses_azurevnetvpngatewayip_name": {
            "defaultValue": "azurevnetvpngatewayip",
            "type": "String"
        },
        "virtualNetworkGateways_azurevnetvpngateway_name": {
            "defaultValue": "azurevnetvpngateway",
            "type": "String"
        },
        "connections_cn_onprem2cloud_001_name": {
            "defaultValue": "cn-azure2onprem",
            "type": "String"
        },
        "virtualNetworks_azurevnet_name": {
            "defaultValue": "azurevnet",
            "type": "String"
        },
        "gatewayIpAddress": {
            "type": "string",
            "metadata": {
                "description": "Onpremise VPN GW IP Address"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Network/localNetworkGateways",
            "apiVersion": "2019-08-01",
            "name": "[parameters('localNetworkGateways_lgw_cmonprem_001_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "localNetworkAddressSpace": {
                    "addressPrefixes": [
                        "192.168.0.0/24"
                    ]
                },
                "gatewayIpAddress": "[parameters('gatewayIpAddress')]"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-08-01",
            "name": "[parameters('publicIPAddresses_azurevnetvpngatewayip_name')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "type": "Microsoft.Network/connections",
            "apiVersion": "2019-08-01",
            "name": "[parameters('connections_cn_onprem2cloud_001_name')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('virtualNetworkGateways_azurevnetvpngateway_name'))]",
                "[resourceId('Microsoft.Network/localNetworkGateways', parameters('localNetworkGateways_lgw_cmonprem_001_name'))]"
            ],
            "properties": {
                "virtualNetworkGateway1": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('virtualNetworkGateways_azurevnetvpngateway_name'))]"
                },
                "localNetworkGateway2": {
                    "id": "[resourceId('Microsoft.Network/localNetworkGateways', parameters('localNetworkGateways_lgw_cmonprem_001_name'))]"
                },
                "connectionType": "IPsec",
                "connectionProtocol": "IKEv2",
                "routingWeight": 0,
                "sharedKey": "demo!pass123",
                "enableBgp": false,
                "usePolicyBasedTrafficSelectors": false,
                "ipsecPolicies": [
                ],
                "trafficSelectorPolicies": [
                ],
                "expressRouteGatewayBypass": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2019-08-01",
            "name": "[parameters('virtualNetworkGateways_azurevnetvpngateway_name')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddresses_azurevnetvpngatewayip_name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "vnetGatewayConfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddresses_azurevnetvpngatewayip_name'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_azurevnet_name'), 'GatewaySubnet')]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "VpnGw1",
                    "tier": "VpnGw1"
                },
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "activeActive": false,
                "bgpSettings": {
                    "asn": 65515,
                    "bgpPeeringAddress": "10.1.254.254",
                    "peerWeight": 0
                },
                "vpnGatewayGeneration": "Generation1"
            }
        }
    ],
    "outputs": {
    }
}